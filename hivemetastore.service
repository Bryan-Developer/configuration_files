[Unit]
Description=Hive Metastore Service
After=mysql.service
StartLimitIntervalSec=0
[Service]
Type=simple
Restart=on-failure
RestartSec=1
User=bryan
ExecStart=/usr/local/hive/bin/hive --service metastore
ExecStop=kill $(ps aux | grep 'org.apache.hadoop.hive.metastore.HiveMetaStore' | awk 'NR==1 {print $2}')

[Install]
WantedBy=multi-user.target