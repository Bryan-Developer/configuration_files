[Unit]
Description=HiveServer2 Service
After=hivemetastore.service
StartLimitIntervalSec=0
[Service]
Type=simple
Restart=on-failure
RestartSec=1
User=bryan
ExecStart=/usr/local/hive/bin/hive --service hiveserver2 --hiveconf hive.server2.thrift.port=10000 --hiveconf hive.root.logger=INFO,console
ExecStop=kill $(ps aux | grep 'org.apache.hive.service.server.HiveServer2' | awk 'NR==1 {print $2}')

[Install]
WantedBy=multi-user.target